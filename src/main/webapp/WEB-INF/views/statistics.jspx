        <form action="${pageContext.request.contextPath}/options/getstatistics" method="get">
            <p>
                <label for="date"> Выберите месяц: </label><br/>
                <input id="date" type="month" name="workdate"/>

                <br/>
                <button class="add_button"> Pievienot</button>

            </p>
